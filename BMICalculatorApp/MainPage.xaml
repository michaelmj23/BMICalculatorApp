<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BMICalculatorApp.MainPage"
    Title="BMI Calculator">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30"
            Spacing="20">

            <Label 
                Text="BMI Calculator"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="HeightEntry"
                Placeholder="Enter Height (meters)"
                Keyboard="Numeric" />

            <Entry 
                x:Name="WeightEntry"
                Placeholder="Enter Weight (kg)"
                Keyboard="Numeric" />

            <Button 
                Text="Calculate BMI"
                Clicked="OnCalculateClicked"
                BackgroundColor="Blue"
                TextColor="White" />

            <Label 
                x:Name="ResultLabel"
                FontSize="20"
                TextColor="Black"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>